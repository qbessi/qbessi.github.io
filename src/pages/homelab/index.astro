---
import PageLayout from '@/layouts/BaseLayout.astro'
import ToolSection from '@/components/ToolSection.astro'
import Button from '@/components/Button.astro'

const TOOLS = [
	{
		name: 'Obsidian',
		description: 'Long-form Writing',
		href: 'https://obsidian.md/',
		iconPath: 'obsidian',
		iconBgColour: '#06A67F'
	},
	{
		name: 'Hyper',
		description: 'Electron-based Terminal',
		href: 'https://hyper.is/',
		iconPath: 'hyper',
		iconBgColour: '#06A67F'
	},
	{
		name: 'VSCodium',
		description: 'IDE',
		href: 'https://github.com/VSCodium/vscodium',
		iconPath: 'vscode',
		iconBgColour: '#06A67F'
	},
	{
		name: 'Neovim',
		description: 'Vim-based Text Editor',
		href: 'https://neovim.io/',
		iconPath: 'neovim',
		iconBgColour: '#06A67F'
	},
	{
		name: 'JetBrains Mono',
		description: 'Typeface for Developers',
		href: 'https://www.jetbrains.com/lp/mono/',
		iconPath: 'jetbrains',
		iconBgColour: '#000000'
	}
]
---

<PageLayout meta={{ title: 'Home' }}>
	<div class='w-full'>
		<Button title='Back' href='/' style='button'>
			<svg
				xmlns='http://www.w3.org/2000/svg'
				width='14'
				height='14'
				viewBox='0 0 24 24'
				slot='icon-before'
			>
				<path
					fill='currentColor'
					d='m6.921 12.5l5.792 5.792L12 19l-7-7l7-7l.713.708L6.921 11.5H19v1z'
				>
				</path>
			</svg>
		</Button>

		<div class='mt-5 flex w-full flex-col gap-y-10'>
			<div>
				<h1 class='mb-1 text-2xl font-bold'>Homelab</h1>
				<p>Homelab &amp; tools I use daily</p>
			</div>
			
			<ToolSection title='Tools' tools={TOOLS} />
		</div>
	</div>
</PageLayout>
